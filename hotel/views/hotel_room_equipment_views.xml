<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="hotel_room_equipment_view_list" model="ir.ui.view">
            <field name="name">hotel.room.equipment.view.list</field>
            <field name="model">hotel.room.equipment</field>
            <field name="arch" type="xml">
                <list string="Room Equipment">
                    <field name="name"/>
                    <field name="value"/>
                </list>
            </field>
        </record>

        <record id="hotel_room_equipment_view_form" model="ir.ui.view">
            <field name="name">hotel.room.equipment.view.form</field>
            <field name="model">hotel.room.equipment</field>
            <field name="arch" type="xml">
                <form string="Room Equipment">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="value"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hotel_room_equipment_action" model="ir.actions.act_window">
            <field name="name">Room Equipment</field>
            <field name="res_model">hotel.room.equipment</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>